#include "main.h"

/**
* print_binary -a function that  prints binary of a number
* @n: the n prints
*
* Return: 0
*/
void print_binary(unsigned long int n)
{
unsigned long int mask;
int size;
mask = 1;
	size = sizeof(unsigned long int) * 8;

	for (--size; size >= 0; --size)
	{
		switch ((n >> size) & 1)
		{
		case 1:
			_putchar('1');
			break;
		case 0:
			if ((mask << size) == 0)
				_putchar('0');
			break;
		}
	}
}

