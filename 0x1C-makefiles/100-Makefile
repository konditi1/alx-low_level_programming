#!/usr/bin/make -f

# Makefile for building 'school' executable

# Compiler to use
CC = gcc

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default target
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

# Rule to clean up temporary and executable files
clean:
	$(RM) *~ $(NAME)

# Rule to remove object files
oclean:
	$(RM) $(OBJ)

# Rule to remove temporary, executable, and object files
fclean: clean oclean

# Rule to recompile all source files
re: fclean all

# Include dependency on m.h
$(OBJ): m.h

.PHONY: all clean oclean fclean re
